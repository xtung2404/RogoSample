<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:paddingTop="5dp">
        <include layout="@layout/toolbar"
            android:id="@+id/toolbar"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ln_onoff"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/onoff"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>
            <Switch
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/switch_onoff"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ln_openclose"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/openclose"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/btn_close"
                    android:text="@string/close"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_yellow_20dp"
                    android:textAllCaps="true"
                    android:layout_margin="4dp"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/btn_stop"
                    android:text="@string/stop"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_yellow_20dp"
                    android:textAllCaps="true"
                    android:layout_margin="4dp"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/btn_open"
                    android:text="@string/open"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_yellow_20dp"
                    android:textAllCaps="true"
                    android:layout_margin="4dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ln_lock_unlock"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lock_unlock"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/btn_lock"
                    android:text="@string/close"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_yellow_20dp"
                    android:textAllCaps="true"
                    android:layout_margin="4dp"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/btn_unlock"
                    android:text="@string/unlock"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_yellow_20dp"
                    android:textAllCaps="true"
                    android:layout_margin="4dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ln_brightness"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/brightness"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"/>
            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/sb_brightness"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:max="100"
                android:min="0"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ln_saturation"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/saturation"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"/>
            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/sb_saturation"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:min="0"
                android:max="360"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/color"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"/>
            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/sb_color"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:min="1"
                android:max="5"/>
        </LinearLayout>
    </LinearLayout>
</layout>